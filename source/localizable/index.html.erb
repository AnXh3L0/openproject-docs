---
full_title: OpenProject Documentation & Help
layout: home
body_classes: landing
---
<div class="row topic--background">
  <ul class="main-topics" itemscope itemtype="http://www.schema.org/SiteNavigationElement">
    <% data.products.each do |key, product| %>
      <% translation_base = "products.#{key}" %>
      <li>
        <a itemprop="url" href="<%= localized_path(product[:path]) %>">
          <div class="topic--wrapper wrapper flex-container flex-column">
            <% badge = t("#{translation_base}.badge", default: nil) %>
            <% if badge %>
              <div class="topic--badge -<%= t("#{translation_base}.badge_color", default: 'gray') %>">
                <%= badge %>
              </div>
            <% end %>
            <%= image_tag product[:img], alt: t("#{translation_base}.title"), class: 'line logo' %>
            <div class="topic-info">
              <h2 class="topic--header" itemprop="name"><%= t("#{translation_base}.title") %></h2>
              <p class="topic--info center"><%= I18n.t("#{translation_base}.text") %></p>
            </div>
          </div>
        </a>
      </li>
    <% end %>
  </ul>
</div>
<div class="row popular-topics--background">
  <div class="popular-topics">
    <h1>Most popular topics</h1>
    <div class="popular-topics--container">
      <% I18n.t('popular_topics').each do |_, item| %>
      <div class="popular-topics--item">
        <a href="<%= item[:link] %>">
          <header><%= item[:title] %></header>
          <div>
            <p>
              <%= item[:text] %>
            </p>
          </div>
        </a>
      </div>
      <% end %>
    </div>
  </div>
</div>
